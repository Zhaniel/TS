---
import { Icon } from "astro-icon";
import { Image } from "astro:assets";
// import HeroImage from "~/components/hero-image.astro";
import LinesImage from '../assets/TS_Lines_nobg.svg';
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "#",
    description: "",
    icon: "mdi:home",
  },
  {
    url: "mailto:biuro@technikastosowana.pl",
    description: "e-mail",
    icon: "mdi:email",
  },
  {
    url: "#",
    description: "Nasz facebook",
    icon: "fa-brands:facebook",
  },

  // {
  //   url: "#",
  //   description: "",
  //   icon: "fa-brands:twitter",
  // },
];
---

<footer class="relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden bg-black">
    <Image
    class="h-full w-full object-cover"
      src={LinesImage}
      alt="Static Lines" 
    />
  </div>
  <ul class="relative grid grid-cols-3 gap-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
